{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "printWidth": 120,
  "trailingComma": "all",
  "singleQuote": true
}